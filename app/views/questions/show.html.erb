<h2><%= @question.title %></h2>

<% if session[:user_id] == @question.user_id %>
	<header>
	  <p>
	    <%= link_to 'Edit', edit_question_path(@question) %>
	  </p>

	  <p>
	    <%= link_to 'Delete', question_path(@question), method: :delete %>
	  </p>
	</header>
<% end %>

<h4>
  <%= "Posted by #{@question.user.name} at #{@question.created_at}" %>
</h4>

<p><%= @question.body %></p>

<%= render 'answers/index', answers: @answers %>

<p><%= link_to 'Post Your Answer', new_question_answer_path(@question)  %></p>