<h2> Make Your Wisdom Writ </h2>

<div class='forms'>
  <%= form_for [@question, @answer] do |f| %>
  <!-- must tell the form it is for the question of a specific answer -->
  <%= f.label :title %>:
  <%= f.text_field :title %><br>

  <%= f.label :body %>:
  <%= f.text_field :body %><br>

  <%= f.label :user_id %>:
  <%= f.text_field :user_id %><br>

  <%= f.hidden_field :question_id, value: @question.id %>

  <%= f.submit %>

  <% end %>
</div>